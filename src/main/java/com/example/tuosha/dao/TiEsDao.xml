<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="import com.example.tuosha.dao.TiEsDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.example.tuosha.model.TiEsEntity" id="tiEsMap">
        <result property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="image" column="image"/>
        <result property="link" column="link"/>
        <result property="sort" column="sort"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
        <result property="deletedAt" column="deleted_at"/>
    </resultMap>
    
  <sql id="Base_Column_List" > 
  	  	     id ,  	        
  	  	     name ,  	        
  	  	     image ,  	        
  	  	     link ,  	        
  	  	     sort ,  	        
  	  	      created_at as createdAt  ,  	        
  	  	      updated_at as updatedAt  ,  	        
  	  	      deleted_at as deletedAt    	        
  	  
  </sql>

	<select id="queryObject" resultType="com.example.tuosha.model.TiEsEntity">
		select  <include refid="Base_Column_List" />  from ti_es where id = #{value}
	</select>

	<select id="queryList" resultType="com.example.tuosha.model.TiEsEntity">
		select  <include refid="Base_Column_List" />  from ti_es
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from ti_es 
	</select>
	 
	<insert id="save" parameterType="com.example.tuosha.model.TiEsEntity" useGeneratedKeys="true" keyProperty="id">
		insert into ti_es
		(
			`name`, 
			`image`, 
			`link`, 
			`sort`, 
			`created_at`, 
			`updated_at`, 
			`deleted_at`
		)
		values
		(
			#{name}, 
			#{image}, 
			#{link}, 
			#{sort}, 
			#{createdAt}, 
			#{updatedAt}, 
			#{deletedAt}
		)
	</insert>
	 
	<update id="update" parameterType="com.example.tuosha.model.TiEsEntity">
		update ti_es 
		<set>
			<if test="name != null">`name` = #{name}, </if>
			<if test="image != null">`image` = #{image}, </if>
			<if test="link != null">`link` = #{link}, </if>
			<if test="sort != null">`sort` = #{sort}, </if>
			<if test="createdAt != null">`created_at` = #{createdAt}, </if>
			<if test="updatedAt != null">`updated_at` = #{updatedAt}, </if>
			<if test="deletedAt != null">`deleted_at` = #{deletedAt}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="delete">
		delete from ti_es where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from ti_es where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>